{
  "extends": ["@rocketseat/eslint-config/node"],
  "rules": {
    "camelcase": "off",
    "no-useless-constructor": "off"
  },
  "prettier/prettier": [
    "error",
    {
      "semi": false,
      "singleQuote": true,
      "trailingComma": "all",
      "printWidth": 80,
      "tabWidth": 2,
      "arrowParens": "avoid",
      "endOfLine": "auto",
      "parser": "flow"
    }
  ]
}
